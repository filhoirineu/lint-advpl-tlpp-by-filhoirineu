{
  "name": "lint-advpl-sidebar",
  "displayName": "Lint AdvPL Sidebar",
  "description": "Minimal VS Code extension showing lint results in a sidebar (no toasts/problems).",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:lint-advpl.sidebar",
    "onCommand:lint-advpl.analyze",
    "onCommand:lint-advpl.exportTxt"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lint-advpl.analyze",
        "title": "LINT ADVPL: Analisar arquivo atual"
      },
      {
        "command": "lint-advpl.exportTxt",
        "title": "LINT ADVPL: Exportar relat√≥rio TXT (arquivo atual)"
      },
      {
        "command": "lint-advpl.openView",
        "title": "LINT ADVPL: Open Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lint-advpl",
          "title": "LINT",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "lint-advpl": [
        {
          "id": "lint-advpl.sidebar",
          "name": "Lint Results",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Lint AdvPL",
      "properties": {
        "lint-advpl.showInProblems": {
          "type": "boolean",
          "default": true,
          "description": "Show lint issues in the Problems panel."
        },
        "lint-advpl.editorUnderline": {
          "type": "boolean",
          "default": false,
          "description": "When true, show underlines/squiggles in the editor for issues; when false, publish issues to Problems without underlining code."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.79.0"
  }
}