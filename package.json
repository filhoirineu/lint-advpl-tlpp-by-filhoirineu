{
  "name": "lint-advpl-tlpp",
  "displayName": "Lint AdvPL/TLPP",
  "description": "Lint offline para ADVPL/TLPP — painel lateral com sugestões de escopo, nomenclatura e boas práticas.",
  "version": "0.0.4",
  "publisher": "filhoirineu",
  "repository": {
    "type": "git",
    "url": "https://github.com/filhoirineu/lint-advpl-tlpp-by-filhoirineu"
  },
  "license": "GPL-3.0",
  "icon": "media/market-icon.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:lint-advpl.sidebar",
    "onCommand:lint-advpl.analyze",
    "onCommand:lint-advpl.exportTxt",
    "onLanguage:advpl"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lint-advpl.analyze",
        "title": "LINT ADVPL: Analisar arquivo atual"
      },
      {
        "command": "lint-advpl.exportTxt",
        "title": "LINT ADVPL: Exportar relatório TXT (arquivo atual)"
      },
      {
        "command": "lint-advpl.openView",
        "title": "LINT ADVPL: Open Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lint-advpl",
          "title": "LINT",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "lint-advpl": [
        {
          "id": "lint-advpl.sidebar",
          "name": "Lint Results",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Lint AdvPL",
      "properties": {
        "lint-advpl.showInProblems": {
          "type": "boolean",
          "default": true,
          "description": "Show lint issues in the Problems panel."
        },
        "lint-advpl.editorUnderline": {
          "type": "boolean",
          "default": false,
          "description": "When true, show underlines/squiggles in the editor for issues; when false, publish issues to Problems without underlining code."
        },
        "lint-advpl.ignoredNames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "aRotina",
            "cCadastro"
          ],
          "description": "List of variable names (case-insensitive) to ignore for the unused-local rule. Use simple identifiers, without quotes."
        }
      }
    },
    "languages": [
      {
        "id": "advpl",
        "aliases": [
          "ADVPL",
          "AdvPL"
        ],
        "extensions": [
          ".prw",
          ".prx",
          ".tlpp"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.79.0",
    "sharp": "^0.34.5",
    "typescript": "^4.9.5"
  }
}