{
  "name": "lint-advpl-tlpp",
  "displayName": "Lint AdvPL/TL++",
  "description": "Lint offline para ADVPL/TL++ — painel lateral com sugestões de escopo, nomenclatura e boas práticas.",
  "version": "0.0.11",
  "publisher": "filhoirineu",
  "repository": {
    "type": "git",
    "url": "https://github.com/filhoirineu/lint-advpl-tlpp-by-filhoirineu"
  },
  "license": "GPL-3.0",
  "icon": "media/market-icon.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lint-advpl.analyze",
        "title": "Analisar arquivo"
      },
      {
        "command": "lint-advpl.exportTxt",
        "title": "Exportar relatório (TXT)"
      },
      {
        "command": "lint-advpl.openView",
        "title": "Abrir painel LINT"
      },
      {
        "command": "lint-advpl.openConverterSettings",
        "title": "Configurar conversores"
      },
      {
        "command": "lint-advpl.convertBeginSQL",
        "title": "BeginSQL → ADVPL/TL++"
      },
      {
        "command": "lint-advpl.convertSelectionToQuery",
        "title": "SQL → ADVPL/TL++"
      },
      {
        "command": "lint-advpl.convertAdvplToSql",
        "title": "ADVPL/TL++ → SQL"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lint-advpl",
          "title": "LINT",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "lint-advpl": [
        {
          "id": "lint-advpl.sidebar",
          "name": "Lint Results",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "lint-advpl.convertBeginSQL",
          "when": "editorTextFocus && editorLangId == advpl",
          "group": "converters"
        },
        {
          "command": "lint-advpl.convertSelectionToQuery",
          "when": "editorTextFocus && editorLangId == advpl",
          "group": "converters"
        },
        {
          "command": "lint-advpl.convertAdvplToSql",
          "when": "editorTextFocus && editorLangId == advpl",
          "group": "converters"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Lint AdvPL",
      "properties": {
        "lint-advpl.showInProblems": {
          "type": "boolean",
          "default": true,
          "description": "Show lint issues in the Problems panel."
        },
        "lint-advpl.editorUnderline": {
          "type": "boolean",
          "default": false,
          "description": "When true, show underlines/squiggles in the editor for issues; when false, publish issues to Problems without underlining code."
        },
        "lint-advpl.ignoredNames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "aRotina",
            "cCadastro",
            "INCLUI",
            "ALTERA"
          ],
          "description": "List of variable names (case-insensitive) to ignore for the unused-local rule."
        },
        "lint-advpl.hungarianSuggestInitializers": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.hungarianIgnoreAsType": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.fileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".prw",
            ".prx",
            ".tlpp"
          ]
        },
        "lint-advpl.requireDocHeaderRequireName": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.requireDocHeaderIgnoreWsMethodInWsRestful": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.enableRules": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.rules": {
          "type": "object",
          "default": {
            "advpl/no-unused-local": true,
            "advpl/require-doc-header": true,
            "advpl/require-local": true,
            "advpl/hungarian-notation": true,
            "advpl/suggest-default-for-params": true,
            "advpl/require-explicit-private": true,
            "advpl/include-replace": true,
            "advpl/require-with-nolock": true,
            "advpl/use-crlf": true
          },
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "lint-advpl.database": {
          "type": "string",
          "default": "sqlserver",
          "enum": [
            "sqlserver",
            "oracle",
            "postgres",
            "mysql",
            "other"
          ]
        },
        "lint-advpl.enableConvertBeginSQL": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.enableConvertSelection": {
          "type": "boolean",
          "default": true
        },
        "lint-advpl.databaseCompany": {
          "type": "string",
          "default": "010",
          "description": "Company suffix to append to table names when converting RetSQLName('XXX') -> XXX{company}"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.79.0",
    "sharp": "^0.34.5",
    "typescript": "^4.9.5"
  }
}